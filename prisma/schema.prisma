generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             String  @id @default(uuid()) @db.Uuid
  nome           String  @db.VarChar(100)
  idade          Int
  email          String  @unique @db.VarChar(50)
  password       String
  link_do_github String?

  @@map("usuarios")
}

